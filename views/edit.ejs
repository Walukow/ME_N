<div class="container d-flex justify-content-center mt-2">
    <div class="row">
        <div class="col">
            <h2 class="">Form Ubah Contact</h2>
            <% if (typeof errors !== 'undefined') { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <ul>
                        <% errors.forEach(e => { %>
                            <li>
                                <%= e.msg %>
                            </li>
                        <% }) %>
                    </ul>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %>
            
                    <form method="post" action="/contact?_method=PUT">
                        <div class="mb-3">
                            <label for="nama" class="form-label">Nama</label>
                            <input type="hidden" name="_id" id="_id" value="<%= contact._id %>">
                            <input type="hidden" name="namaOld" id="namaOld" value="<%= contact.namaOld || contact.nama %>">
                            <input type="text" class="form-control" id="nama" name="nama" placeholder="Budi" value="<%= contact.nama %>" required>
                        </div>
                        <div class="mb-3">
                            <label for="nohp" class="form-label">No HP</label>
                            <input type="number" class="form-control" id="nohp" name="nohp" placeholder="08XXXXXXXX" value="<%= contact.nohp %>"
                                required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" value="<%= contact.email %>"
                                placeholder="name@example.com" required>
                        </div>
                        <button class="btn btn-primary" type="submit">Ubah</button>
                    </form>

        </div>
    </div>
</div>